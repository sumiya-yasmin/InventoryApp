@model InventoryApp.Models.Supplier;

@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="card shadow-sm">
    <div class="card-header">
       <h3>@ViewData["Title"]</h3>
    </div>
<div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SupplierId" />
            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Address" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
             <div class="mb-3 row">
                <label asp-for="Phone" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
             <div class="mb-3 row">
                <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
             <input type="submit" value="Save" class="btn btn-success" />
                 <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
