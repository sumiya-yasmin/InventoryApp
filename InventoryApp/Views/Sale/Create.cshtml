@model InventoryApp.Models.Sale

@{
    ViewData["Title"] = "Create Sale";
}
<div class="card shadow-sm">
    <div class="card-header">
       <h3>@ViewData["Title"]</h3>
    </div>
<div class="card-body">

<form asp-action="Create">
    <div class="mb-3 row">
        <label asp-for="ProductId" class="col-sm-3 col-form-label">Product</label>
         <div class="col-sm-9">
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
         </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="CustomerId" class="col-sm-3 col-form-label">Customer</label>
         <div class="col-sm-9">
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
         </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Quantity" class="col-sm-3 col-form-label"></label>
         <div class="col-sm-9">
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
         </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="PricePerUnit" class="col-sm-3 col-form-label"></label>
         <div class="col-sm-9">
        <input asp-for="PricePerUnit" class="form-control" />
        <span asp-validation-for="PricePerUnit" class="text-danger"></span>
         </div>
    </div>

                <button type="submit" class="btn btn-success">Save</button> 
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
