@model InventoryApp.Models.Sale

@{
    ViewData["Title"] = "Edit Sale";
}

<div class="card shadow-sm">
    <div class="card-header">
       <h3>@ViewData["Title"]</h3>
    </div>
<div class="card-body">

<form asp-action="Edit">
    <input type="hidden" asp-for="SaleId" />

    <div class="mb-3 row">
        <label asp-for="ProductId" class="col-sm-3 col-form-label">Product</label>
        <div class="col-sm-9">
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="CustomerId" class="col-sm-3 col-form-label">Customer</label>
        <div class="col-sm-9">
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Quantity" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
        <input asp-for="Quantity" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="PricePerUnit" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
        <input asp-for="PricePerUnit" class="form-control" />
        </div>
    </div>

 <input type="submit" value="Save" class="btn btn-success" />
                 <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
</div>
</div>
