@model InventoryApp.Models.Purchase

@{
    ViewData["Title"] = "Purchase Details";
}

<h1>Purchase Details</h1>

<dl class="row">
    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@Model.Product.Name</dd>

    <dt class="col-sm-2">Supplier</dt>
    <dd class="col-sm-10">@Model.Supplier?.Name</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>

    <dt class="col-sm-2">Price/Unit</dt>
    <dd class="col-sm-10">@Model.PricePerUnit</dd>

    <dt class="col-sm-2">Total</dt>
    <dd class="col-sm-10">@(@Model.Quantity * @Model.PricePerUnit)</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.PurchaseDate.ToString("yyyy-MM-dd")</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.PurchaseId" class="btn btn-primary">Edit</a> |
<a asp-action="Index" class="btn btn-secondary">Back</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}